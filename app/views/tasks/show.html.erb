<h1><%= @task.title %></h1>
<div class="container text-center d-flex justify-content-center">
  <p><%= @task.details %></p>
  <% if @task.completed %>
    <p><i class="fa-solid fa-check p-3 text-success"></i></p>
  <% else %>
    <p><i class="fa-solid fa-xmark p-3 text-danger"></i></p>
  <% end %>
</div>

<div class="container text-center">
  <%= link_to "Edit Task",
      edit_task_path(@task),
      class: "btn btn-secondary"
      %>

  <%= link_to "Delete Task",
      task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
      class: "btn btn-danger"
      %>

  <%= link_to "Back to Tasks List",
      tasks_path,
      class: "btn btn-primary"
      %>
</div>

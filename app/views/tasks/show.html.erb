<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Edit Task",
    edit_task_path(@task)
    %>

<%= link_to "Back to Tasks List",
    tasks_path
    %>

<%= link_to "Delete Task",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
